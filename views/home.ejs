
<div class="container d-flex pt-3 justify-content-xxl-center">
    <div class="bg-secondary bg-opacity-25 rounded-2 p-5 mb-5">
        <div class="text-center pb-5">
            <h1>Welcome to cheapEgames</h1>
        </div>
        <div class="text-center opacity-75">
            <p class="">Begin by Searching a Video-Game Genre</p>
        </div>
        
        <form method="GET" action="/results">
            <div class="container">
                <div class="input-group col-1">
                    <input class='form-control' id="search" type="text" name="search" placeholder="Genre" required />
                    <button class="btn btn-outline-light" id="button-addon2" type="Submit">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container d-flex flex-wrap justify-content-center text-center gap-2">
    <% rawgInfo.forEach(result => { %>
        <% if(!result.tags.find(object => object.slug === "free-to-play")) { %>
            <form method="GET" action="/results/<%= result.name %>">
                <div class="pt-4 pb-4 px-3 bg-secondary bg-opacity-25 rounded-3">
                    <p><%= result.name %></p>
                    <textarea hidden id='id' name="id"><%= result.id %></textarea>
                    <button style="background: none; border: none;" href="/results/<%= result.name %>">
                        <img src="<%= result.background_image %>" style="width:250px; height: 140px;" class="rounded-3" />
                    </button>
                    <div >
                        <button class="rounded-1 bg-secondary text-white px-5 py-2 mt-4" style="border: none;">Read More</button>
                    </div>
                </div>
            </form>
        <% } %>
    <% }) %>
</div>
